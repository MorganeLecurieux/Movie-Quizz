{
  "include": ["**/*.tsx", "**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "strict": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  }
}
