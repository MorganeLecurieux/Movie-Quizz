{
  "include": ["**/*.tsx", "**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "strict": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
